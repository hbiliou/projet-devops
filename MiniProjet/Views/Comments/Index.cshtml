@model IEnumerable<nouhailaMiniProjet.Models.Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mt-3"></div> <!-- Adding space between navbar and content -->

@using (Html.BeginForm("Index", "Comments", FormMethod.Get, new { @class = "form-inline mb-3" }))
{
    <div class="form-group">
        @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control mb-2", placeholder = "Search by Comment text or Author" })
        <button type="submit" class="btn btn-primary ml-2">Search</button>
    </div>
}

<table class="table mt-3">
    <!-- Adding space between search input and table -->
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
        </tr>
    }
</table>

