@model List<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Role Name</th>
        <th>Actions</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = role.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = role.Id }, new { onclick = "return confirm('Are you sure you want to delete this role?');" })
            </td>
        </tr>
    }
</table>
